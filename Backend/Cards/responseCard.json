{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "{Text}",
      "wrap": true,
      "maxLines": 0
    }
  ],
  "actions": [
    {
      "title": "{ActionTitle}",
      "type": "Action.Submit",
      "data": {
        "action": "SwitchAiService"
      }
    }
  ]
}