# HeroCardDemo(answer)
[Herocard
    text=${answer}
    buttons=${CardAction('messageBack', '进入IT板块（Ask IT）',json(ITSpecialtyJson()))}| ${CardAction('messageBack', '进入法务板块（小诺）',json(LegalSpecialtyJson()))}
]

# CardAction (type,title, value)
[CardAction
    Type = ${if(type == null, 'messageBack', type)}
    Title = ${title}
    Text=${title}
    Value = ${value}
]

